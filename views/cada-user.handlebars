    <title>Cadastro CovLocation</title>
</head>
<body >
        
    <body>

        <section class="content-site">
            <div class="container">
                <section class="centro">
                    <div class="col-md-12">

                     
                    </div>
                            <div class="row">
                                <div class="space"></div>
                            </div>
                            <main>
                                <form action="/add-cadastro" method="POST">
                                    <div class="box">
                                        <img class="displayed2" src="cadastro/img/Group 5.png" alt="garota">
                                        <h2>CRIE SUA CONTA E JUNTE-SE A NÓS</h2>
            
                                        <div class="espaco"></div>
                                        <div class="row row-cols-2">
                                            <div class="col-md-4 offset-md-1">
                                                <label for="nome">Nome completo:</label>
                                                <input type="text" class="form-control" name="nome" id="nome" placeholder="Digite seu nome" maxlenght="50"> 
                                            </div>
                                        </div>
                                        <div class="espaco"></div>
                                        <div class="row row-cols-2">
                                            <div class="col-md-4 offset-md-1">
                                                <label for="email">Email:</label>
                                                <input type="email" class="form-control" name="email" id="email" placeholder="Digite seu email" maxlenght="50"> 
                                            </div>
                                            <div class="col-md-4 offset-md-2">
                                                <label for="senha">Senha</label>
                                                <input type="password" class="form-control" name="senha" id="senha" placeholder="Digite sua senha" maxlenght="50">
                                            </div>
                                        </div>

                                        <div class="espaco"></div>
                                        <div class="row">
                                            <div class="col-sm-2 offset-sm-1">
                                                <label for="idade">Idade:</label>
                                                <input type="number" class="form-control" name="idade" id="idade" placeholder="Digite sua idade"> 
                                            </div>
                                            <div class="col-sm-2 offset-sm-2">

                                        <div class="espaco"></div>

                                                    <div class="row align-items-center">
                                                        <div class="col">
                                                            <h2>Endereço</h2>
                                                        </div>
                                            
                                                    </div>

                                                        <div class="espaco"></div>
                                                        <div class="row row-cols-2 ">
                                                            <div class="col-sm-8 offset-sm-1">
                                                                <label for="nome">Endereco:</label>
                                                                <input type="text" class="form-control" name="endereco" id="endereco" placeholder="Digite sua rua" maxlenght="50"> 
                                                        </div>
                            
                                                        <div class="espaco"></div>


                                                        <div class="row align-items-center">
                                                            <div class="col">
                                                                <h2>Contato</h2>
                                                            </div>
                                                
                                                        </div>
                                                                <div class="espaco"></div>
                
                                                                    <div class="col-sm-2">
                                                                        <label for="telefone">Celular</label>
                                                                        <input type="text" class="form-control" name="telefone" id="telefone" placeholder="Digite o telefone" maxlenght="50">
                                                                    </div>
                                                                </div>

                                                        <div class="espaco"></div>

                                                                    <div class="row">
                                                                        <div class="col text-center">
                                                                            <div class="row">
                                                                                <div class="col text-center">
                                                                                    <input type="submit" value="FINALIZAR CADASTRO">
                                                                                </div>
                                                                              </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    </div>

                                                                   

                                        
                                        </div>
                                        
                                    </div>
                                </form>
                            </main>
                        </section>
                    </div>
                </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
